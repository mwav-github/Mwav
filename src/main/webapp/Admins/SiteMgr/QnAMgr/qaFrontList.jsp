<script>
	function page_move2(s_value) {
		var f = document.NsmNews; //폼 name
		f.boardNews_id.value = s_value; //POST방식으로 넘기고 싶은 값 (이건 실제 내부 내용)
		f.submit();
	}
</script>
<form name="FrontQAList" action="/admin/boardQnA/qaView.mwav" method="post">

	<div class="bs-component">
		<!-- NEW  -->
		<table class="table table-striped">
			 	<thead>
			<tr>
				<th>Title</th>
				<th>QAGroup</th>
				<th>member_id</th>
				<th>QAInsertDt</th>
			</tr>
		</thead> 
			<tbody>
				<%--xml mapper에서 사용한 id는 사용불가능하다. --%>
				<c:choose>
					<c:when test="${fn:length(selectListQnAFrontList) > 0}">
						<c:forEach var="VselectListQAFrontList"
							items="${selectListQnAFrontList}">
							<input type="hidden" name="QnA_id"
								value="${VselectListQAFrontList.QnA_id}" />
							<input type="hidden" name="uqViewCount"
								value="${VselectListQAFrontList.uqViewCount}" />
							<input type="hidden" name="member_id"
								value="${VselectListQAFrontList.member_id}" />	
						
							<tr>
								<!-- a태그로 처리요망 -->
								<td class="col-md-3"><a
									href="/admin/boardQnA/qaView.mwav?QnA_id=${VselectListQAFrontList.QnA_id}">${VselectListQAFrontList.uqTitle}</a></td>
									<td class="col-md-3">${VselectListQAFrontList.uqGroup}</td>
									<td class="col-md-3">${VselectListQAFrontList.member_id}</td>
								<%--view를 구현하는 방법에 따라 달라진다. get 문 형태 유망 --%>
								<td class="col-md-3">${VselectListQAFrontList.uqInsertDt}</td>
							</tr>
						</c:forEach>
					</c:when>
					<c:otherwise>
						<tr>
							<td colspan="2">조회된 결과가 없습니다.</td>
						</tr>
					</c:otherwise>
				</c:choose>
			</tbody>

		</table>
	</div>
</form>
